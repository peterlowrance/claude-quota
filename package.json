{
  "name": "claude-quota",
  "version": "1.0.0",
  "description": "Fast statusline showing Claude Code subscription quota usage",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterlowrance/ccquota.git"
  },
  "homepage": "https://github.com/peterlowrance/ccquota#readme",
  "bugs": {
    "url": "https://github.com/peterlowrance/ccquota/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "statusline",
    "quota",
    "cli"
  ],
  "type": "module",
  "bin": {
    "claude-quota": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && node -e \"const f='dist/index.js';const c=require('fs').readFileSync(f,'utf8');require('fs').writeFileSync(f,'#!/usr/bin/env node\\n'+c);require('fs').chmodSync(f,0o755)\"",
    "start": "node --no-warnings ./src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22",
    "tsdown": "^0.12.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.13.0"
  },
  "license": "MIT"
}
